.c-tag-selector {
    display: flex;
    flex-wrap: wrap;
}

.cts-tag {
    margin-bottom: 15rpx;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    color: rgba(0,0,0,0.65);
    line-height: 1.5;
    list-style: none;
    -webkit-font-feature-settings: 'tnum';
    font-feature-settings: 'tnum';
    display: inline-block;
    height: auto;
    margin-right: 15rpx;
    padding: 3rpx 20rpx;
    font-size: 22rpx;
    line-height: 34rpx;
    white-space: nowrap;
    background: #fafafa;
    border: 1px solid #d9d9d9;
    border-radius: 4px;
    cursor: default;
    opacity: 1;
    -webkit-transition: all .3s cubic-bezier(.78, .14, .15, .86);
    transition: all .3s cubic-bezier(.78, .14, .15, .86);
}

.cts-tag.dotted {
    background: rgb(255, 255, 255);
    border-style: dashed;
}

.cts-tag.selected {
    color: #faad14;
    background: #fffbe6;
    border-color: #ffe58f;
}