.con-my-textarea {
    position: relative;
    margin: 20rpx 0;
}

.my-textarea {
    width: 100%;
    font-size: 22rpx;
    line-height: 34rpx;
    height: 300rpx;
    border-radius: 5px;
    padding: 15rpx 25rpx;
    box-sizing: border-box;
    color: rgba(0, 0, 0, 0.65);
    border: 1px solid rgba(0, 0, 0, 0.08);
}

.my-textarea.counting {
    padding: 15rpx 25rpx 50rpx;
}

.cmy-count {
    right: 25rpx;
    bottom: 15rpx;
    font-size: 22rpx;
    position: absolute;
    color: rgba(0, 0, 0, 0.45);
}