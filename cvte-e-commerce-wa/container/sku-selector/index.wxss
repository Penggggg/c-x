}

.sku-bg {
    left: 0;
    opacity: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    position: fixed;
    z-index: 1000;
    background: rgba( 0, 0, 0, 0.5 );
}

.sku-bg.hide {
    bottom: -100vh;
}

.sku-contaienr-bg {
    left: 0;
    opacity: 0;
    bottom: -70vh;
    width: 100vw;
    height: 70vh;
    position: fixed;
    z-index: 10000;
    background: rgba( 0, 0, 0, 0 );
}


.sku-container-block {
    display: flex;
    height: 100%;
    position: relative;
    background: #fff;
    padding: 20rpx 0rpx 0;
    box-sizing: border-box;
    flex-direction: column;
    border-radius: 2px 2px 0 0;
}

.sku-close-btn {
    top: 20rpx;
    right: 20rpx;
    padding: 5rpx;
    z-index: 999999;
    position: absolute;
}

.sku-header {
    display: flex;
    position: relative;
    box-sizing: border-box;
    padding: 0 30rpx;
    /* padding-left: 300rpx; */
}

.sku-img-block {
    width: 180rpx;
    height: 180rpx;
    /* padding: 10rpx;
    background: #fff;
    border-radius: 5px; */
    margin-right: 40rpx;
    box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
}

.sku-img-block.hide {
    top: 0;
}

.sku-img {
    width: 100%;
    height: 100%;
    border-radius: 5px;
}

.sku-img.hide {
    top: 0;
}


.sku-price-block {
    flex: 1;
    display: flex;
    padding-top: 30rpx;
    flex-direction: column;
    box-sizing: border-box;
}

.sku-price-set {
    display: flex;
    align-items: flex-end;
    color: #D10C14;
    font-size: 32rpx;
    font-weight: bold;
}

.sku-price {
    color: #D10C14;
    font-size: 32rpx;
    font-weight: bold;
    margin-right: 25rpx;
}

.sku-fade-price {
    color: #999;
    font-size: 24rpx;
    display: inline;
    text-decoration: line-through;
}

.sku-price-text {
    color: #ff5777;
    font-size: 24rpx;
    margin-left: 30rpx;
}

.sku-price.sm {
    font-size: 28rpx;
}

.sku-stock {
    color: #999;
    margin-top: 10rpx;
    font-size: 26rpx;
    margin-bottom: -15rpx;
}

.sku-title {
    color: #999;
    font-size: 28rpx;
    margin-top: 15rpx;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}

.sku-title.nmt {
    margin-top: 0;
}

.sku-standards-and-buy-block {
    /* height: 580rpx; */
    flex: 1;
    box-sizing: border-box;
    position: relative;
    margin-bottom: 20rpx;
    overflow-y: scroll;
    padding: 50rpx 20rpx 50rpx
}

.sku-standards-block {
    padding: 0 25rpx 20rpx;
    position: relative;
}

.sku-standards-block:after {
    /* left: 0;
    bottom: 0;
    height: 1px;
    width: 100%;
    content: "";
    position: absolute;
    background: #fafafa; */
}   

.sku-standards {
    display: flex;
    flex-wrap: wrap;
}

.sku-info-title {
    color: #333;
    font-size: 28rpx;
    margin-bottom: 20rpx;
}

.sku-info-title.mt {
    margin-top: 18rpx;
}

.sku-info-title.il {
    display: inline;
}

.sku-standards-item {
    color: #999999;
    font-size: 24rpx;
    padding: 10rpx 22rpx;
    border-radius: 3px;
    margin-right: 15rpx;
    margin-bottom: 15rpx;
    border: 1px solid #999999;
}

.sku-standards-item.out_select {
    color: #bfbfbf;
    background: #fafafa;
    border: 1px solid #bfbfbf;
}

.sku-standards-item.selecting {
    color: #905128;
    border: 1px solid #905128;
}

.sku-count-block {
    /* display: flex; */
    /* align-items: center; */
    /* justify-content: space-between; */
}

.sku-count-title {
    margin-bottom: 0;
}

.sku-count-meta {
    margin-top: 15rpx;
}

.sku-btn-block {
    /* padding-bottom: 25rpx; */
}

.sku-btn {
    text-align: center;
    padding: 22rpx 20rpx;
    font-size: 32rpx;
    text-align: center;
    color: #fff;
    border-radius: 0;
    letter-spacing: 0.08em;
    text-shadow: 0 0 3px rgba( 0, 0, 0, 0.1 );
    background: #313234;
}

.sku-btn.lh {
    line-height: 45rpx;
}
