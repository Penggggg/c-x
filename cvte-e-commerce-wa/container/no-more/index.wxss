.con-no-more {
    color: #999999;
    font-size: 24rpx; 
    text-align: center;
    position: relative;
    margin: 50rpx 0;
}

.con-no-more:before {
    left: 20rpx;
    top: 50%;
    content: '';
    height: 1px;
    width: 38vw;
    position: absolute;
    transform: scaleY( 0.5 );
    background: rgba(0, 0, 0, 0.1 );
}

.con-no-more:after {
    right: 20rpx;
    top: 50%;
    content: '';
    height: 1px;
    width: 38vw;
    position: absolute;
    transform: scaleY( 0.5 );
    background: rgba(0, 0, 0, 0.1 );
}