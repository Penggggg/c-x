/* pages/receive-coupon/index.wxss */
.receive-coupon .header{
    position: relative;
}

.receive-coupon .header .back-img{
    width:750rpx;
    height:214rpx;
}
.receive-coupon .header .avatar{
    width:144rpx;
    height:144rpx;
    position: absolute;
    top:100%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 50%;
}
.receive-coupon .header .text{
    position: absolute;
    top:50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width:640rpx;
    height:56rpx;
    text-align: center;
    font-size:40rpx;
    font-family:PingFang-SC;
    font-weight:800;
    color:rgba(255,255,255,1);
    line-height:56rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.cr-header {
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    position: absolute;
    box-sizing: border-box;
    padding: 20rpx 50rpx 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.cr-header-title {
    color: #fff;
    font-size: 38rpx;
    line-height: 52rpx;
    letter-spacing: 0.03em;
    text-align: center;
    margin-bottom: 0rpx;
}

.cr-header-title.small {
    font-size: 30rpx;
    line-height: 42rpx;
    margin: 20rpx 0 10rpx;
}

.cr-header-tips {
    color: #fff;
    font-size: 24rpx;
    letter-spacing: 0.05em;
}

.coupon-list{
    margin-top: 94rpx;
    margin-bottom: 100rpx;
}

.coupon-item {
    padding: 0 30rpx;
    margin: 20rpx 0 30rpx;
    overflow: visible;
}

.button{
    box-shadow:0rpx 0rpx 20rpx 0rpx rgba(0,0,0,0.2);
    position: fixed;
    bottom:0rpx;
    /* left: 10vw; */
    width: 100vw;
    padding: 25rpx 0;
    background:rgba(221,185,123,1);
    /* border-radius:48rpx; */
    font-size:32rpx;
    font-family:PingFangSC;
    color:rgba(255,255,255,1);
    text-align: center;
    letter-spacing: 0.05em;
}

.button.red {
    background: #c73637;
}

.back{
    position: fixed;
    bottom:200rpx;
    background:rgba(255,255,255,0);
    color:rgba(221,185,123,1);
    box-shadow:none;
}

.pgd-top-icon {
    width: 70rpx;
    height: 70rpx;
    position: fixed;
}

.pgd-top-icon.right {
    bottom: 200rpx;
    right: 40rpx;
}

.expired{
    text-align: center;
}

.empty{
    display: flex;
    align-items: center;
    justify-content: center;
}

.emb-img {
    
    height: 420rpx;
    width: 500rpx;
    margin-bottom: 20rpx;
}

.emptyTips{
    color: #666;
    font-size: 26rpx;
    letter-spacing: 0.05;
    line-height: 40rpx;
    overflow: hidden; 
    display: -webkit-box; 
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}
