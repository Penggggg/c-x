.p-activity-coupon {
    height: 100vh;
    position: relative;
    overflow: hidden;
}

.pac-bg {
    height: 100vh;
    width: 100vw;
}

.pac-content {
    top: 0;
    left: 0;
    display: flex;
    height: 100vh;
    width: 100vw;
    position: absolute;
    align-items: center;
    flex-direction: column;
    
}

.pac-info-block {
    display: flex;
    align-items: center;
    padding: 80rpx 50rpx 0;
    flex-direction: column;
    box-sizing: border-box; 
}

.pac-info-title {
    color: #cea570;
    font-size: 70rpx;
    -webkit-line-clamp: 1;
    word-break: break-all;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    letter-spacing: 0.05em;
    font-weight: bold;
    margin-bottom: 40rpx;
}

.pac-info-desc {
    color: #cea570;
    font-size: 24rpx;
    line-height: 40rpx;
    letter-spacing: 0.1em;
    text-align: center;
    margin-bottom: 30rpx;
}

.pac-info-sub {
    color: #fff;
    font-size: 50rpx;
    font-weight: bold;
    text-align: center;
    letter-spacing: 0.2em;
    margin-bottom: 20rpx;
}

.pac-coupon-block {
    flex: 1;
    width: 100vw;
    padding: 0 15rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column
}

.pac-coupon-con {
    /* height: 100%; */
    flex: 1;
    background: #fff;
    overflow-y: scroll;
    box-sizing: border-box;
    padding: 20rpx 0 50rpx;
    border-radius: 5px 5px 0 0;
}

.pac-btn-block {
    width: 100vw;
    color: #fff;
    text-align: center;
    background: #d8af75;
    box-sizing: border-box;
    font-size: 35rpx;
    letter-spacing: 0.08em;
    padding: 25rpx 0;
}

.pac-coupon-item {
    padding: 0 30rpx;
    margin: 20rpx 0 30rpx;
    overflow: visible;
}