.tool-bar{
    width: 87rpx;
    height: 87rpx;
    position: fixed;
    bottom: 40rpx;
    right:24rpx;
    background: rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 8rpx;
}

