/* pages/pay-res/index.wxss */
.pay-result{
    position: relative;
    /* min-height: 100vh; */
}

.upload-tips{
    width:452rpx;
    height:50rpx;
    margin: 20rpx auto;
    /* margin: 20rpx  249rpx 0 249rpx; */
    font-size:36rpx;
    font-family:PingFang-SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:50rpx;
}

.pay-result .bank-card{
    width:710rpx;
    height:344rpx;
    background:linear-gradient(160deg,rgba(255,255,255,1) 0%,rgba(253,253,253,1) 100%);
    box-shadow:0rpx 0rpx 20rpx 0rpx rgba(0,0,0,0.1);
    border-radius:20rpx;
    border:1rpx solid rgba(222,222,222,0.3);
    margin-top:70rpx;
    margin-left: 20rpx;
}

.pay-result .bank-card .title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height:44rpx;
    margin-top: 40rpx;
    margin-left: 22rpx;
    width: 644rpx;
    margin-bottom: 10rpx;
}

.pay-result .bank-card .title .tips{
    height:44rpx;
    font-size:32rpx;
    font-family:PingFang-SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:44rpx;
}

.pay-result .bank-card .title .copy{
    width:136rpx;
    text-align: center;
    height:34rpx;
    border-radius:48rpx;
    border:1rpx solid rgba(221,185,123,1);
    font-size:24rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(221,185,123,1);
    line-height:34rpx;
}

.pay-result .bank-card .info-item{
    margin-left: 22rpx;
    margin-top: 30rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.pay-result .bank-card .info-item .key{
    width: 132rpx;
    height:40rpx;
    font-size:28rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:40rpx;
    letter-spacing:1rpx;
}
.pay-result .bank-card .info-item .label{
    height:40rpx;
    font-size:28rpx;
    font-family:PingFang-SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:40rpx;
    letter-spacing:1rpx;
}

.pay-result .btns-group{
    /* position: absolute; */
    /* bottom: 278rpx; */
    margin-top: 100rpx;
    margin-bottom: 40rpx;
}

.pay-result .btns-group .button{
    width:598rpx;
    height:84rpx;
    border-radius:48rpx;
    border:1rpx solid rgba(221,185,123,1);
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(221,185,123,1);
    line-height:84rpx;
    text-align: center;
    margin-left: 78rpx;
    margin-top: 40rpx;
}

.pay-result .btns-group .done{
    background:rgba(221,185,123,1);
    color:white;
}

.pay-result .wait-check {
    text-align: center;
    margin-top:124rpx;
}

.pay-result .wait-check image{
    width:104rpx;
    height:104rpx;
}
.pay-result .wait-check .main{
    height:80rpx;
    font-size:56rpx;
    font-family:PingFang-SC;
    font-weight:bold;
    color:rgba(51,51,51,1);
    line-height:80rpx;
    margin-top:24rpx;
}
.pay-result .wait-check .tips{
    height:44rpx;
    font-size:32rpx;
    font-family:PingFangSC;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:44rpx;
    margin-top:20rpx;
}

.pay-result .pay-upload-warper{
    margin-top: 136rpx;
    font-size: 48rpx;
}

.pay-result .pay-upload .c-img-upload{
    width:624rpx; 
    padding: 0;
    border-radius:12rpx;
    margin-left: 64rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.pay-result .pay-upload .c-img-upload .ciu-upload-btn-container, .pay-result .pay-upload .ciu-img-container{
    width:624rpx;
    height:312rpx;
    border:2rpx dashed rgba(153,153,153,1);
    color: black;

    box-sizing: content-box;
    margin: 0 0 20rpx 0;
}

.pay-result .pay-upload .c-img-upload  image{
    width:620rpx;
    height:308rpx;
    border:2rpx solid rgba(153,153,153,1);
    border-radius: 12rpx;
    color: black;
    align-items: unset;
    justify-content: unset;
}